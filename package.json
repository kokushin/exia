{
  "productName": "Exia - Novel game engine",
  "name": "exia",
  "author": {
    "name": "@kokushing",
    "url": "https://x.com/kokushing"
  },
  "version": "0.0.1",
  "private": true,
  "main": "main/index.js",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "concurrently --kill-others \"npm run dev:electron\" \"npm run dev:editor\"",
    "dev:electron": "npm run build-electron && electron .",
    "dev:editor": "cd editor && npm run dev",
    "open:editor": "sleep 3 && open http://localhost:3001",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json",
    "build-voice": "node scripts/generateVoices.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.8.2",
    "electron-is-dev": "^1.2.0",
    "electron-next": "^3.1.5",
    "jotai": "^2.12.2",
    "next": "^14.2.24",
    "postcss": "^8.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typewriter-effect": "^2.21.0"
  },
  "devDependencies": {
    "@types/node": "^14.18.63",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "concurrently": "^9.1.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.5"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ]
  }
}
